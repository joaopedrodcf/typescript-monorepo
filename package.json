        "stylelint": "13.13.1",
        "stylelint-config-standard": "22.0.0",
        "ts-jest": "26.5.6",
        "ts-loader": "9.2.3",
        "tsconfig-paths-webpack-plugin": "3.5.1",
        "typescript": "4.3.4",
