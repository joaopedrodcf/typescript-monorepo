    "dependencies": {
        "@emotion/react": "11.4.0",
        "@emotion/styled": "11.3.0",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "@babel/core": "7.14.6",
